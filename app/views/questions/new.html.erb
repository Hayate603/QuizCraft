<%= form_with model: [@quiz, @question], local: true do |form| %>
  <div class="field">
    <%= form.label :question_text, "質問テキスト" %>
    <%= form.text_area :question_text %>
  </div>

  <div class="field">
    <%= form.label :correct_answer, "正解" %>
    <%= form.text_field :correct_answer %>
  </div>

  <div class="actions">
    <%= form.submit "質問を作成" %>
  </div>
<% end %>
