<%= form_with model: @question, local: true do |form| %>
  <div class="field">
    <%= form.label :question_text %>
    <%= form.text_area :question_text %>
  </div>

  <div class="field">
    <%= form.label :correct_answer %>
    <%= form.text_field :correct_answer %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
