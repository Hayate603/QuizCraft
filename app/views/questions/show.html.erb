<div class="question-details">
  <h1 class="question-details__title"><%= @question.question_text %></h1>

  <p class="question-details__answer">
    <strong>正解:</strong>
    <%= @question.correct_answer %>
  </p>

  <% if user_signed_in? && (@question.quizzes.first.user == current_user) %>
    <div class="question-details__actions form-actions">
      <%= link_to '質問を編集', edit_quiz_question_path(@question.quizzes.first, @question), class: 'button button--secondary' %>
      <%= link_to '質問を削除', quiz_question_path(@question.quizzes.first, @question), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'button button--danger' %>
    </div>
  <% end %>

  <div class="question-details__back form-actions">
    <%= link_to 'クイズ詳細に戻る', quiz_path(@question.quizzes.first), class: 'button button--primary' %>
  </div>
</div>
