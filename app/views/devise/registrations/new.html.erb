<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="oauth-providers">
  <h3>または</h3>
  <%= button_to "Googleで新規登録", user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "oauth-btn google" %>
  <%= button_to "Facebookで新規登録", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "oauth-btn facebook" %>
</div>

<%= render "devise/shared/links" %>
