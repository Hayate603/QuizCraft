<h2 class="registration__title">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'registration__form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="registration__field form-field">
    <%= f.label :email, "メールアドレス", class: 'registration__label form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'registration__input form-input' %>
  </div>

  <div class="registration__field form-field">
    <%= f.label :password, "パスワード", class: 'registration__label form-label' %>
    <% if @minimum_password_length %>
      <em class="registration__password-hint form-hint">(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'registration__input form-input' %>
  </div>

  <div class="registration__field form-field">
    <%= f.label :password_confirmation, "パスワード確認", class: 'registration__label form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'registration__input form-input' %>
  </div>

  <div class="registration__actions form-actions">
    <%= f.submit "新規登録", class: 'registration__submit button button--primary' %>
  </div>
<% end %>

<div class="registration__oauth-providers oauth-providers">
  <h3 class="registration__oauth-title oauth-title">または</h3>
  <%= button_to "Googleで新規登録", user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "registration__oauth-btn oauth-btn google" %>
  <%= button_to "Facebookで新規登録", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "registration__oauth-btn oauth-btn facebook" %>
</div>

<%= render "devise/shared/links" %>
