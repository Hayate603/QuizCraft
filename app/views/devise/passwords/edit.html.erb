<h2 class="passwords-edit__title">パスワードを変更する</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'passwords-edit__form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="passwords-edit__field form-field">
    <%= f.label :password, "新しいパスワード", class: 'form-label' %>
    <% if @minimum_password_length %>
      <em class="passwords-edit__hint">(最低<%= @minimum_password_length %>文字)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-input' %>
  </div>

  <div class="passwords-edit__field form-field">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input' %>
  </div>

  <div class="passwords-edit__actions form-actions">
    <%= f.submit "パスワードを変更する", class: 'form-submit button button--primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
