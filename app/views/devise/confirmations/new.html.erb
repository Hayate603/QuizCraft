<h2 class="confirmations__title">アカウント確認メールの再送信</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'confirmations__form' }) do |f| %>
  <div class="confirmations__field form-field">
    <%= f.label :email, "メールアドレス", class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-input' %>
  </div>

  <div class="confirmations__actions form-actions">
    <%= f.submit "確認メールを再送信", class: 'form-submit button button--primary' %>
  </div>
<% end %>

<%= render "devise/shared/links", class: 'confirmations__links' %>
