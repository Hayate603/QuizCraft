<footer class="footer">
  <div class="container footer__container">
    <p class="footer__text">&copy; <%= Date.today.year %> Quizcraft. All rights reserved.</p>
    <nav class="footer__nav">
      <ul class="footer__list">
        <li class="footer__list-item"><%= link_to 'ホーム', root_path, class: 'footer__link' %></li>
        <% if user_signed_in? %>
          <li class="footer__list-item"><%= link_to 'マイクイズ', user_my_quizzes_path(current_user), class: 'footer__link' %></li>
          <li class="footer__list-item"><%= link_to 'お気に入り', user_favorite_quizzes_path(current_user), class: 'footer__link' %></li>
          <li class="footer__list-item"><%= link_to 'クイズ作成', new_quiz_path, class: 'footer__link' %></li>
        <% end %>
        <% unless user_signed_in? %>
          <li class="footer__list-item"><%= link_to '新規登録', new_user_registration_path, class: 'footer__link' %></li>
          <li class="footer__list-item"><%= link_to 'ログイン', new_user_session_path, class: 'footer__link' %></li>
        <% else %>
          <li class="footer__list-item"><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'footer__link' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</footer>
