<%= form_with model: @quiz, local: true do |form| %>
  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description, "説明" %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit "クイズを更新" %>
  </div>
<% end %>
