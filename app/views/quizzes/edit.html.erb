<h1 class="quiz-edit__title">クイズを編集</h1>

<%= form_with model: @quiz, local: true, data: { turbo: false }, class: 'quiz-edit__form' do |form| %>
  <% if @quiz.errors.any? %>
    <div id="error_explanation" class="quiz-edit__error">
      <h2 class="quiz-edit__error-title"><%= pluralize(@quiz.errors.count, "エラー") %>が発生しました:</h2>
      <ul class="quiz-edit__error-list">
        <% @quiz.errors.full_messages.each do |msg| %>
          <li class="quiz-edit__error-item"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field quiz-edit__field">
    <%= form.label :title, "タイトル", class: 'form-label quiz-edit__label' %>
    <%= form.text_field :title, class: 'form-input quiz-edit__input' %>
  </div>

  <div class="form-field quiz-edit__field">
    <%= form.label :description, "説明", class: 'form-label quiz-edit__label' %>
    <%= form.text_area :description, class: 'form-input quiz-edit__textarea' %>
  </div>

  <!-- 公開・非公開の選択フィールド -->
  <div class="form-field quiz-edit__field">
    <%= form.label :publish, "クイズの公開設定", class: 'form-label quiz-edit__label' %>
    <div class="quiz-edit__publish-info">
      <%= form.check_box :publish, class: 'form-checkbox quiz-edit__checkbox' %>
      <span>クイズを公開する (チェックすると他のユーザーがクイズにアクセスできます)</span>
    </div>
  </div>

  <div class="form-actions quiz-edit__actions">
    <%= form.submit "クイズを更新", class: 'form-submit button button--primary quiz-edit__submit' %>
  </div>
<% end %>
